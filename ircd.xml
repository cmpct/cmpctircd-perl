<config>
    <ircd>
        <host>irc.cmpct.info</host>
        <network>cmpct</network>
        <desc>the perl irc server</desc>
    </ircd>
    <server>
        <ip>127.0.0.1</ip>
        <port>6667</port>
    </server>
    <sockets>
        <!-- Can be one of: epoll, select -->
        <provider>epoll</provider>
    </sockets>
    <advanced>
        <pingtimeout>120</pingtimeout>
        <maxtargets>200</maxtargets>
    </advanced>
</config>
